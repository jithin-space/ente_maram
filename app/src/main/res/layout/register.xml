<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5fb0c9"
    android:orientation="vertical"
    android:scrollbarAlwaysDrawVerticalTrack="true">

    <TextView
        android:id="@+id/register_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="44dp"
        android:gravity="center_horizontal"
        android:text="Account Register"
        android:textColor="#fff"
        android:textSize="26sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#fff"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:paddingTop="30dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/register_firstName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_login_user"
                        android:drawableStart="@drawable/ic_login_user"
                        android:drawableTint="#FF4081"
                        android:hint="@string/first_name"
                        android:imeOptions="actionNext"
                        android:inputType="textPersonName"
                        android:singleLine="true"
                        android:textColor="#000" />

                    <requestFocus />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">


                    <EditText
                        android:id="@+id/register_lastName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_login_user"
                        android:drawableStart="@drawable/ic_login_user"
                        android:drawableTint="#FF4081"
                        android:hint="@string/last_name"
                        android:imeOptions="actionNext"
                        android:inputType="textPersonName"
                        android:singleLine="true"
                        android:textColor="#000" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>









            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <EditText
                    android:id="@+id/register_username"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_login_user"
                    android:drawableStart="@drawable/ic_login_user"
                    android:drawableTint="#FF4081"
                    android:hint="@string/email_address"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:textColor="#000" />
            </android.support.design.widget.TextInputLayout>

            <!--email-->

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <EditText
                    android:id="@+id/register_email"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_login_user"
                    android:drawableStart="@drawable/ic_login_user"
                    android:drawableTint="#FF4081"
                    android:hint="@string/phone_number"
                    android:inputType="phone"
                    android:digits="0123456789+"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:textColor="#000" />


                <!--&lt;!&ndash;<EditText&ndash;&gt;-->
                <!--&lt;!&ndash;android:id="@+id/phone"&ndash;&gt;-->
                <!--&lt;!&ndash;style="@style/register_textbox"&ndash;&gt;-->
                <!--&lt;!&ndash;android:hint="@string/phone"&ndash;&gt;-->
                <!--&lt;!&ndash;android:inputType="phone"&ndash;&gt;-->
                <!--&lt;!&ndash;android:digits="0123456789+"/>&ndash;&gt;-->



            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <EditText
                    android:id="@+id/register_password"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_login_user"
                    android:drawableStart="@drawable/ic_login_user"
                    android:drawableTint="#FF4081"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColor="#000" />
            </android.support.design.widget.TextInputLayout>

            <!--confirm password-->

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <EditText
                    android:id="@+id/register_password2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_login_user"
                    android:drawableStart="@drawable/ic_login_user"
                    android:drawableTint="#FF4081"
                    android:hint="@string/verify_password"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColor="#000" />
            </android.support.design.widget.TextInputLayout>



            <android.support.v7.widget.AppCompatButton
                android:id="@+id/register"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="22dp"
                android:background="#d67601"
                android:onClick="handleContinueClick"
                android:text="@string/register_continue"
                android:textColor="#fff"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/temp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:clickable="true"
                android:gravity="center"
                android:onClick="redirectLogin"
                android:text="Already a member? Please Sign In"
                android:textColor="#000"
                android:textSize="16dip" />

        </LinearLayout>
    </RelativeLayout>

    <ImageButton
        android:id="@+id/user_profile_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/register_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:background="@drawable/user_profile_background"
        android:elevation="4dp"
        android:src="@drawable/ic_profile_icon" />

    </RelativeLayout>