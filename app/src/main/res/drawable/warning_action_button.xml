<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/warning_action"
                android:endColor="@color/warning_action_end"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/text_light" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/warning_action_end"
                android:startColor="@color/warning_action"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/text_light" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="@color/warning_action_end"
                android:startColor="@color/warning_action"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/text_light" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            
            <margin 
				android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>
</selector>